@model IEnumerable<OshawaBookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="ct-btn btn btn-primary" asp-action="Create">Create New</a>
</p>
<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        Book Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table table-striped">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    <a class="ct-btn btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="ct-btn btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="ct-btn btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
