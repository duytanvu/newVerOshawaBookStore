@model IEnumerable<OshawaBookStore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="ct-btn btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.ExpressShipping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpressShipping)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.ID)
                </td>
                <td>
                    <a class="ct-btn btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="ct-btn btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="ct-btn btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
